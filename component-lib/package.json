{
  "name": "component-lib",
  "version": "1.0.0",
  "description": "react component library",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "config": {
    "tscCompilerOptions": "tsc --project tsconfig.json --pretty"
  },
  "scripts": {
    "test": "jest",
    "watch": "$npm_package_config_tscCompilerOptions --watch",
    "compile": "rm -rf dist; $npm_package_config_tscCompilerOptions",
    "bundle": "./scripts/ready-distribution.sh",
    "build": "npm run compile && npm run bundle",
    "pack": "npm publish --dry-run"
  },
  "keywords": [
    "react",
    "component",
    "library"
  ],
  "peerDependencies": {
    "react": ">17.0.0"
  },
  "author": "avimehenwal",
  "license": "ISC",
  "devDependencies": {
    "@types/react": "^17.0.0",
    "react": "^17.0.1",
    "typescript": "^4.1.3"
  }
}